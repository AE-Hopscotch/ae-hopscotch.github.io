<div class="section" data-id="{{> uuid}}">
  <h3>{{> title}}</h3>
  <div class="section-flex">
    <div class="section-upper vflex">
      <div class="flex">
        <p><img alt="project thumbnail" data-screen="small" width="190px" src="/images/hs-thumbnails/{{> uuid}}.png"/>{{> description}}</p>
      </div>
    </div>
    <div class="section-lower vflex" data-screen="tiny medium large">
      <div class="center">
        <img alt="project thumbnail" width="100%" src="/images/hs-thumbnails/{{> uuid}}.png"/>
      </div>
    </div>
  </div>
  <div class="center"><a class="button game-link" href="/hs-tools/play-project/?id={{> uuid}}" data-url="{href}&play=1">{{> button}} <i class="fa fa-arrows-alt"></i></a></div>
</div>
